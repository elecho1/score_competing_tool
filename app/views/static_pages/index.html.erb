<h2 class="text-center">ようこそジャパリパークへ！</h2>

<% unless user_signed_in? %>
  <div class="text-center">
    <%= link_to "ログイン", new_user_session_path, class:"btn btn-info margin-5px" %>
    <%= link_to "新規登録", new_user_registration_path, class:"btn btn-default margin-5px" %> 
    <%#= link_to image_tag('sign_in_with_slack.png') , user_slack_omniauth_authorize_path %>
  </div>

<% else %>
  <%#= link_to "ログアウト", destroy_user_session_path, method: :delete %> 
  <%#= link_to "アカウント情報変更", edit_user_registration_path %>
  <%#= link_to "アカウント情報確認", users_profile_path %> 
  <%#= link_to "点数登録", new_myscores_path %> 
  <%#= link_to "点数更新", edit_myscores_path %> 
  <%#= link_to "自分の点数", myscores_path %>
  <%#= link_to "みんなの点数一覧表", table_path %>
  <div class="text-center">
    <% if current_user.user_score.present? %>
      <%= link_to "点数更新", edit_myscores_path, class:"btn btn-info margin-5px" %>
      <%= link_to "みんなの点数一覧表", table_path, class:"btn btn-default margin-5px" %> 
    <% else %>
      <%= link_to "点数登録", new_myscores_path, class:"btn btn-info margin-5px" %>
    <% end %>
  </div>
<% end %>
