<span id="sample-font"></span>

<!-- Chart.jsのデフォルト設定 -->
<script type="text/javascript">
  var elem1 = document.getElementById("sample-font");

  // フォントカラー
  Chart.defaults.global.defaultFontColor = window.getComputedStyle(elem1, null).color;
  // フォントファミリー
  Chart.defaults.global.defaultFontFamily = window.getComputedStyle(elem1, null).fontFamily;
  // フォントサイズ
  //Chart.defaults.global.defaultFontSize = 16;
  Chart.defaults.global.defaultFontSize = parseFloat(window.getComputedStyle(elem1, null).fontSize);

  // ブラウズの幅変更時のアニメーションの長さ
  //Chart.defaults.global.responsiveAnimationDuration = 500;
</script>

<h2><%= @subjects.first.key %>の評価の分布</h2>
<% subject_id = @subjects.first.id %>

<div class="row">
<div class="col-sm-10 col-sm-offset-1">
<canvas id="myBarChart" width="250" height="100" >（※表示にはcanvas要素を解釈可能なブラウザが必要です。）</canvas>


<script type="text/javascript">

  var data = {
    labels: ["優上", "優", "良", "可", "不可", "未受講"],
    datasets: [
        {
            label: "<%= @subjects.first.key %>",
            backgroundColor: [
                'rgba(148, 0, 211, 0.3)',
                'rgba(0, 0, 255, 0.3)',
                'rgba(144, 255, 59, 0.3)',
                'rgba(255, 165, 0, 0.3)',
                'rgba(255, 0, 0, 0.3)',
                'rgba(128, 128, 128, 0.3)'
            ],
            borderColor: [
                'rgba(148, 0, 211, 1)',
                'rgba(0, 0, 255, 1)',
                'rgba(144, 255, 59, 1)',
                'rgba(255, 165, 0, 1)',
                'rgba(255, 0, 0, 1)',
                'rgba(128, 128, 128, 1)'
            ],
            borderWidth: 1.2,
            data: [
                <%= @subject_eval_count[subject_id][:yujyou_count] %>, 
                <%= @subject_eval_count[subject_id][:yu_count] %>, 
                <%= @subject_eval_count[subject_id][:ryou_count] %>, 
                <%= @subject_eval_count[subject_id][:ka_count] %>, 
                <%= @subject_eval_count[subject_id][:huka_count] %>, 
                <%= @subject_eval_count[subject_id][:mijyukou_count] %>
            ],
        }
    ]
};
  var ctx = document.getElementById("myBarChart");
  var myBarChart = new Chart(ctx, {
    type: 'horizontalBar',
    data: data,
    options: {
        tooltips: { // tooltips内の表示変更
            callbacks: {
               label: function(tooltipItem, data) {
                      return "<%= @subjects.first.key %>: "+ tooltipItem.xLabel + "人";
                }
            }
        },
        
        legend: {
            display: false
        },
        
        scales: {
                      
            xAxes: [{
                ticks: {
                    /*
                    callback: function(value){
                        return value+"人"
                    },
                    */
                    beginAtZero: true,
                },
                gridLines: {
                    zeroLineWidth: 2,
                    zeroLineColor: "rgba(0, 0, 0, 0.25)",
                    color: "rgba(0, 0, 0, 0.15)"
                }, 
                //stacked: true
            }],
            yAxes: [{
                position: "left",
                ticks: {
                    // fontColor: "red",
                    beginAtZero: true,
                    
                },
                gridLines: {
                    zeroLineWidth: 2,
                    zeroLineColor: "rgba(0, 0, 0, 0.25)",
                    color: "rgba(0, 0, 0, 0.15)"
                },  
            }]
        }
    }
  });
</script>

</div>
</div>

