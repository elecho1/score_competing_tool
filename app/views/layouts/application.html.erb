<!DOCTYPE html>
<!-- used Honoka as Bootstrap thema -->
<html>
<head>
  <title>ScoreCompetingTool</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="no-thank-yu">
  <header>
    <!-- Nav Bar -->
    <%= render partial: 'layouts/navbar' %>
    
  </header>
<%# flash for scores %>
<% unless flash[:error_num].blank? %>
  <span class="has-error">
  <p class="control-label"><%= flash[:error_num] %>件のエラーがあります。</p>
  </span>
<% end %>
<% unless flash[:error_msgs].blank? %>
  <% flash[:error_msgs].each do |msg| %>
    <li class="alert alert-danger"><%= msg %></li>
  <% end %>
<% end %>

<%= yield %>

<%# flash and notice for devise flash message %>
<p class="alert alert-info"><%= notice %></p>
<p class="alert alert-danger"><%= alert %></p>



</body>
</html>
